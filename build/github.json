{
  "name": "client-tinc",
  "type": "img",
  "clear_build_path" : false,
  "build_in": "..",
  "next" : [
    {
      "clear_build_path" : true,
      "build": "docker",
      "build_in" : "docker",
      "run_when" : [
        "release"
      ],
      "config" : {
        "base_image" : "ubuntu",
        "image_name" : "eons/img_client-tinc",
        "image_os" : "debian",
        "also" : [
          "COPY service/tinc.service /etc/systemd/system/tinc.service",
          "COPY service/tinc@.service /etc/systemd/system/tinc@.service",
          "RUN systemctl daemon-reload",
          "EXPOSE 655"
        ],
        "tags" : [
          "latest"
        ]
      }
    }
  ]
}